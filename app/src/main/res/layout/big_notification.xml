<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/big_notification_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:src="@drawable/play_img_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/big_notification_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="歌名"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/big_notification_singer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="歌名"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/big_notification_last"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_up_button" />

            <ImageButton
                android:id="@+id/big_notification_play"
                android:layout_width="38dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_play_button" />

            <ImageButton
                android:id="@+id/big_notification_next"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_next_button" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>