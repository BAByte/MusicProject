<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">


        <ImageView
            android:id="@+id/play_image"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:scaleType="centerCrop"
            android:src="@drawable/playsong_bdg" />

        <TextView
            android:layout_marginTop="6dp"
            android:text="BULE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:id="@+id/palying_songs_name"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:background="@drawable/play_title_bg"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingStart="4dp"
            android:paddingEnd="9dp"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="#ffffff" />


        

        <Button
            android:id="@+id/play_button"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_play_button" />

        <Button
            android:id="@+id/play_mode"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="26dp"
            android:background="@drawable/ic_liebiao"/>

        <Button
            android:id="@+id/lastsong_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="90dp"

            android:background="@drawable/ic_up_button" />




        <Button
            android:id="@+id/nextsong_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/ic_next_button" />

        <Button
            android:layout_alignParentEnd="true"
            android:id="@+id/play_list"
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginBottom="34dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/ic_play_list" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/play_button"
            android:layout_marginBottom="34dp">
            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:max="100"
                android:maxHeight="20dp"
                android:progress="20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/palying_song_length"
                    android:layout_marginLeft="16dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="3:10"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/paly_progress"
                    android:layout_marginRight="16dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="2:10"
                    android:textSize="12sp" />


            </LinearLayout>
        </LinearLayout>



    </RelativeLayout>


</merge>