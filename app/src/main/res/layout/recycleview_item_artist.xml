<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="18dp"
    android:orientation="vertical">
    <!--专辑名的标题-->

    <TextView
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:id="@+id/album_RV_item_title"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textColor="#424245"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <!--这层是为了固定图片的大小-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:transitionName="albumImage"
                android:id="@+id/album_RV_item_imageView"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <!--歌名-->
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView

                android:id="@+id/album_RV_item_song1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:singleLine="true"
                android:textColor="#59595e"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/album_RV_item_song2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:singleLine="true"
                android:textColor="#59595e"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/album_RV_item_song3_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:singleLine="true"
                android:textColor="#59595e"
                android:textSize="16sp" />
        </LinearLayout>

        <!--时间-->
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:padding="3dp"
                android:id="@+id/album_RV_item_song1_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textSize="14sp" />

            <TextView
                android:padding="3dp"
                android:id="@+id/album_RV_item_song2_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textSize="14sp" />

            <TextView
                android:padding="3dp"
                android:id="@+id/album_RV_item_song3_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
